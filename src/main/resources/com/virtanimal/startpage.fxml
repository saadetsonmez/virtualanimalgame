<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane fx:id="container"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.virtanimal.StartPG"
      stylesheets="/com/virtanimal/style.css"
      prefWidth="500" prefHeight="500">

    <ImageView fx:id="bgImage" fitWidth="500.0" fitHeight="500.0"/>

    <VBox layoutX="200.0" layoutY="200.0" spacing="12">
        <Button fx:id="regBtn" text="Register" onAction="#goToRegister" prefWidth="120" prefHeight="40"/>
        <Button fx:id="logBtn" text="Login" onAction="#goToLogin" prefWidth="120" prefHeight="40"/>
    </VBox>

</Pane>
