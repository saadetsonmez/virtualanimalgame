<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane fx:id="registerPage"
            prefWidth="854.0" prefHeight="569.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.virtanimal.RegisterController">

    <!-- Arka plan görseli -->
    <ImageView fx:id="backgroundImage"
               fitWidth="854.0" fitHeight="569.0"
               layoutX="0.0" layoutY="0.0"
               preserveRatio="false"
               pickOnBounds="true" />

    <!-- Geri butonu -->
    <Button fx:id="regbackbtn"
            layoutX="14.0"
            layoutY="14.0"
            text="←"
            onAction="#backToStartPage"
            prefHeight="30.0" prefWidth="40.0"
            styleClass="startpage-btn" />

    <!-- Kayıt formu -->
    <VBox fx:id="registerForm" alignment="CENTER"
          spacing="15.0"
          prefWidth="400.0" prefHeight="390.0"
          style="-fx-background-color: rgba(255,255,255,0.85); -fx-background-radius: 15; -fx-padding: 25;">

        <Label text="Register Form" styleClass="label-title"/>

        <TextField fx:id="usernameField"
                   promptText="Username"
                   maxWidth="300.0"
                   styleClass="text-field"/>

        <TextField fx:id="emailField"
                   promptText="E-Mail"
                   maxWidth="300.0"
                   styleClass="text-field"/>

        <PasswordField fx:id="passwordField"
                       promptText="Password"
                       maxWidth="300.0"
                       styleClass="password-field"/>

        <PasswordField fx:id="confirmPasswordField"
                       promptText="Confirm Password"
                       maxWidth="300.0"
                       styleClass="password-field"/>

        <Button text="Register"
                onAction="#handleRegister"
                styleClass="startpage-btn"
                prefWidth="150"/>

    </VBox>
</AnchorPane>
